{
  "name": "piano",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"npm run start-apollo\" \"npm run start\"",
    "start": "nodemon --watch server scripts/start.js",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "start-apollo": "node ./apollo-server/index.js",
    "start-prod": "export NODE_ENV=production && node server",
    "prod": "concurrently --kill-others \"npm run start-apollo\" \"npm run start-prod\"",
    "precommit": "lint-staged",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,json,css,md}\""
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ],
    "*.{js,json,css,md}": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "autoprefixer": "^9.1.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.5",
    "babel-plugin-css-modules-transform": "^1.6.1",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.4.1",
    "classnames": "^2.2.6",
    "compression": "^1.7.3",
    "css-loader": "^1.0.0",
    "dotenv": "^6.0.0",
    "enzyme": "^3.4.1",
    "enzyme-adapter-react-16": "^1.2.0",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^5.3.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.16.2",
    "file-loader": "^1.1.9",
    "fs-extra": "^7.0.0",
    "graphql-request": "^1.8.2",
    "gsap": "^2.0.1",
    "helmet": "^3.13.0",
    "husky": "^0.14.3",
    "import-glob-loader": "^1.1.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.10",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.4.1",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.14.2",
    "promise": "^8.0.1",
    "react": "^16.4.2",
    "react-calendar-heatmap": "^1.6.3",
    "react-dev-utils": "^5.0.1",
    "react-dimensions": "^1.3.1",
    "react-dom": "^16.4.2",
    "react-error-overlay": "^4.0.0",
    "react-helmet": "^5.2.0",
    "react-icons": "^3.0.5",
    "react-loadable": "^5.5.0",
    "react-loader-spinner": "^2.1.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.3.1",
    "react-test-renderer": "^16.4.2",
    "redux": "^4.0.0",
    "redux-form": "^7.4.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.3.0",
    "sass-loader": "^7.1.0",
    "soundfont-player": "^0.10.7",
    "style-loader": "^0.22.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.0.1",
    "uuid": "^3.3.2",
    "webpack": "^4.16.5",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFiles": [
      "<rootDir>/config/jest/browserMocks.js",
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)",
      "<rootDir>/server/**/__tests__/**/*.js?(x)",
      "<rootDir>/server/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ]
  },
  "devDependencies": {
    "babel-plugin-transform-decorators-legacy": "^1.3.5"
  }
}
